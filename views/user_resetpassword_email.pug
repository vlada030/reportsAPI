extends layouts/main-layout.pug

block primaryNavBar
    include layouts/primaryNavBarAuth.pug

        block link
            a.nav-link(href='../auth/register') REGISTRACIJA

block content
    section.h-75
        .container.h-100
            .row.h-100
                .col-md-6.m-auto
                    .card
                        .card-header.bg-warning
                            h4
                                i.far.fa-user.mr-2
                                | Zaboravljena šifra
                        .card-body
                            form(action="/api/v2/auth/resetpassword" method="POST")
                                .form-group
                                    label(for='forgottenEmail').mb-2 Unesite email adresu sa kojom ste se logovali
                                    input#forgottenEmail.form-control.mt-1.mb-1(type='email' name='email' autofocus=true)

                                    input(type='hidden', name='_csrf', value=csrfToken)

                                    br
                                .d-flex.flex-column.flex-lg-row.justify-content-lg-around
                                    a.btn.btn-secondary.mb-2.px-5(href="/api/v2/auth/login") Otkaži
                                    button.btn.btn-primary.mb-2.px-5(type='submit') Pošalji


block footer
    include layouts/fixed_footer.pug